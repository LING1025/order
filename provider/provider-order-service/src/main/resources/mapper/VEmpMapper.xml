  <select id="selectTelEM" resultMap="queryTelEM">
        declare
        @Type nvarchar(2),@Query int
        set @Type = #{type}
        set @Query = #{userAuto}
        begin

        --以用户ID查询
        if(@Type = 'R4')
            begin
            select b.UserName, a.MTEL mtel,a.Email email
            from v_Emp b join TradeItem a on b.TradeItem_Auto=a.TradeItem_Auto
            where   b.User_Auto=@Query
            end
        end
