    <result column="IsSalesDep" jdbcType="INTEGER" property="isSalesDep" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    UPOrg4Name, UPOrg5, UPOrg3Name, UPOrg4, UPOrg2Name, UPOrg3, UPOrgName, UPOrg2, TradeItem_Auto,
    UserId, User_Auto, Org_Auto, DepCode, Lev, UpUnit, TitleLevel, EmpBase_Auto, DepName,
    TitleName, FName, UserName, IsOn, IsEas, AccCode, IsSalesDep
  </sql>
  <resultMap id="querySaleName" extends="BaseResultMap" type="com.funtl.myshop.plus.provider.domain.SaleNameSelect">
    <result column="salesAuto" jdbcType="BIGINT" property="salesAuto" />
    <result column="saleName" jdbcType="VARCHAR" property="saleName" />
  </resultMap>
    <select id="selectSaleName" resultMap="querySaleName">
        select
        User_Auto salesAuto,FName saleName
        from v_Emp
        where
        1=1
      <if test="salesAuto != null and salesAuto != ''">
        AND User_Auto = #{salesAuto}
      </if>
      <if test="saleName != null and saleName != ''">
        AND FName LIKE '%${saleName}%'
      </if>
        AND IsOn!=0
    </select>

  <!--获取使用部门、使用人数据-->
    <resultMap id="queryCarApply" type="com.funtl.myshop.plus.provider.domain.CarApplyList">
      <result column="orgAuto" jdbcType="BIGINT" property="orgAuto" />
      <result column="orgName" jdbcType="VARCHAR" property="orgName" />
      <result column="userAuto" jdbcType="BIGINT" property="userAuto" />
      <result column="username" jdbcType="VARCHAR" property="username" />
    </resultMap>
    <select id="selectCarApply" resultMap="queryCarApply">
        declare
        @User_Auto bigint = #{userAuto}
        BEGIN
        --根据登录者id查询部门（使用部门）
        select Org_Auto,DepName from v_Emp where User_Auto=@User_Auto
            declare
            @org_auto bigint
            set @org_auto=(select Org_Auto from v_Emp where User_Auto=@User_Auto)
            --根据部门ID查询部门人员（使用人）
            select User_Auto,FName from v_emp where Org_Auto=@org_auto and ison=1 --and User_Auto=@User_Auto
        END
    </select>
</mapper>
